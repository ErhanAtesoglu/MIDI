<Page
    x:Class="Microsoft.Midi.Settings.Views.ManagementSessionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:Microsoft.Midi.Settings.Views"
    xmlns:local="using:Microsoft.Midi.Settings.ViewModels"
    xmlns:midi2="using:Windows.Devices.Midi2"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:helpers="using:Microsoft.Midi.Settings.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Uid="ManagementSessionsPage_Description" Margin="0,0,0,8" />

        <ScrollViewer Grid.Row="1">
            <Grid Margin="0,0,8,0">

                <ItemsControl ItemsSource="{x:Bind ViewModel.Sessions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:MidiServiceSessionInformationWrapper">

                            <controls:SettingsExpander ItemsSource="{x:Bind SessionConnections, Mode=OneTime}"
                                                       IsExpanded="True"
                                                       Margin="3">
                                <controls:SettingsExpander.Header>
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind SessionInfo.SessionName}"/>
                                        <TextBlock Text="{x:Bind SessionInfo.ProcessName}"/>
                                        <TextBlock Text="{x:Bind SessionInfo.ProcessId}"/>
                                    </StackPanel>
                                </controls:SettingsExpander.Header>

                                <controls:SettingsExpander.ItemTemplate>
                                    <DataTemplate x:DataType="midi2:MidiServiceSessionConnectionInfo">
                                        <controls:SettingsCard IsClickEnabled="False">
                                            <controls:SettingsCard.Header>
                                                <StackPanel>
                                                    <TextBlock Text="{x:Bind EndpointDeviceId}" />
                                                    <TextBlock Text="{x:Bind EarliestConnectionTime}" />
                                                    <TextBlock Text="{x:Bind InstanceCount}" />
                                                </StackPanel>
                                            </controls:SettingsCard.Header>
                                        </controls:SettingsCard>
                                    </DataTemplate>
                                </controls:SettingsExpander.ItemTemplate>

                            </controls:SettingsExpander>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

        </ScrollViewer>

    </Grid>
</Page>
